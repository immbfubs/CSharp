<Window x:Class="TotalAmount.SeassonsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotalAmount"
        mc:Ignorable="d"
        Title="SeassonsWindow" Height="300" Width="400">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0" Width="200">
        <ComboBox Width="Auto" Name="seassonNames" SelectionChanged="seassonNames_SelectionChanged"/>
        <TextBlock Text="Начало на сезона:" Margin="0,15,0,8"/>
        <DockPanel>
            
            <TextBox Name="tbSeassonDay" Width="30" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <ComboBox Name="cbSeassonMonth" Width="160" HorizontalAlignment="Right" VerticalContentAlignment="Center"/>
        </DockPanel>
        <DockPanel Margin="0,20,0,0" Height="20">
            <Button Content="Запази" Width="90" Click="Save_Click"/>
            <Button Content="Отказ" Width="90" HorizontalAlignment="Right"/>
        </DockPanel>

    </StackPanel>
</Window>
