<Window x:Class="Store.EditItems2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
       ResizeMode="NoResize"
        Title="Продукти"
        Height="400"
        Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ListView Name="itemsListView" ItemsSource="{DynamicResource Items}" FontSize="15" BorderBrush="Transparent">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Име" DisplayMemberBinding="{Binding Key}" Width="300"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Value}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Width="70" Click="ButtonAdd_Click" BorderThickness="0,1,1,0">Добави</Button>
            <Button Width="70" Click="ButtonChange_Click" BorderThickness="0,1,1,0">Промени</Button>
            <Button Width="70" Click="DeleteButton_click" BorderThickness="0,1,1,0">Изтрий</Button>
        </StackPanel>
    </Grid>
</Window>
