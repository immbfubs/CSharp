<Window x:Class="Store.ItemCahnge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="ItemCahnge"
        Height="220"
        Width="300">
    <Grid Background="AliceBlue">
        <StackPanel Margin="10,10,0,0">
            <TextBlock Text="Име на продукта" Margin="0,0,0,5" FontSize="14"/>
            <TextBox Name="nameTB"  Width="250" Height="25" HorizontalAlignment="Left" Margin="0,0,0,8" FontSize="15" IsReadOnly="True"/>
            <TextBlock Text="Цена:" Margin="0,0,0,5" FontSize="14"/>
            <TextBox Name="priceTB" Width="100" Height="25" HorizontalAlignment="Left" Margin="0,0,0,10" FontSize="15"/>
        </StackPanel>
        <Button Content="Прилагане" Height="30" Width="70" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" PreviewMouseLeftButtonUp="SaveButton_MouseUp"/>
        <Button Content="Отказ" Height="30" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" PreviewMouseLeftButtonUp="CancelButton_MouseUp"/>
    </Grid>
</Window>
